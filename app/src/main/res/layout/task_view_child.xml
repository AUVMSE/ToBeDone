<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/task_card"
        android:padding="5dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">
            <TableRow>
                <ImageView />
                <TextView
                    android:id="@+id/taskView_nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#070606"
                    android:textSize="20dp" />
            </TableRow>
            <TableRow>
                <ImageView />
                <TextView
                    android:id="@+id/taskView_descriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="That is the very long description! ooooooooo so loooooooooooonnnnnnnnnggggg"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/taskView_priorityTextView"
                    android:layout_below="@+id/taskView_nameTextView" />
            </TableRow>

            <TableRow>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/imageView2"
                    android:src="@drawable/skull"/>
                <TextView
                    android:id="@+id/taskView_deadlineTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.09.2015"
                    android:textStyle="bold"
                    android:layout_below="@+id/taskView_priorityTextView"
                    android:layout_toEndOf="@+id/imageView2"
                    android:layout_gravity="center_vertical" />
            </TableRow>


        </TableLayout>

        <TextView
            android:id="@+id/taskView_priorityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textStyle="bold"
            android:textColor="#eb3939"
            android:textSize="20dp"
            android:textIsSelectable="false"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="15dp" />

    </RelativeLayout>

</merge>